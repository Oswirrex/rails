.modal-dialog
	.modal-content
		.modal-header
			%h1
				= task.new_record? ? 'New Task' : "Editing task #{task.title}"
			%button.close{"data-dismiss" => "modal", :type => "button"} Ã—
		.modal-body
			= simple_form_for task, class: '.form-inline', remote: true do |f|
				= f.input :title
				= f.input :note
				= f.input :completed, as: :string, input_html: {class: 'datepicker'}
				.modal-footer
					= f.submit 'Save', class: 'btn btn-primary'
