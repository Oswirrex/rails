- if tasks.empty?
	%span.alert.alert-warning There are no tasks!
- else
	%table.table.table-hover.table-bordered
		%thead
			%tr
				%th Title
				%th Created at
				%th Completed
				%th actions
		%tbody
			- tasks.each do |task|
				%tr
					%td
						%strong= task.title
					%td.text-info= task.created_at
					%td.text-success= task.completed
					%td.text-center
						.btn-group.btn-block
							= link_to task_path(task), class: "btn btn-danger", remote: true, method: :delete, data: {confirm: "Are you sure you want to delete task #{task.title}?"} do
								%i.fa.fa-trash
							= link_to edit_task_path(task), class: "btn btn-warning", remote: true do
								%i.fa.fa-edit